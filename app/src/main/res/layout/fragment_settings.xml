<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackgroundTheme"
    tools:context="nav.settings.Settings">

    <LinearLayout
        android:id="@+id/llSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvNotification"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.125"
            android:backgroundTint="@color/CardsTheme">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llNotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/neon_outline"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:paddingStart="25dp"
                    android:text="@string/txt_notification"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:ems="12"
                    android:singleLine="false"
                    android:textColor="@color/TextTheme">

                </TextView>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNewNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:paddingHorizontal="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/notification"
                    android:background="@drawable/action_rounded_corner_button"
                    android:textColor="@color/TextTheme"
                    android:drawableStart="@drawable/ic_notification"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSettings_3"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.125"
            android:backgroundTint="@color/CardsTheme">
            <LinearLayout
                android:id="@+id/llSettings_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/neon_outline"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="15dp"
                    android:text="@string/choose_currency"
                    android:singleLine="false"
                    android:textColor="@color/TextTheme"/>

                <RadioGroup
                    android:id="@+id/rgCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:checkedButton="@id/rbCurrencyUSD">
                    <RadioButton
                        android:id="@+id/rbCurrencyPLN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/PLN"
                        android:textColor="@color/TextTheme"
                        android:onClick="btnSelect"/>

                    <RadioButton
                        android:id="@+id/rbCurrencyEUR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/EUR"
                        android:textColor="@color/TextTheme"
                        android:onClick="btnSelect"/>

                    <RadioButton
                        android:id="@+id/rbCurrencyUSD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/USD"
                        android:textColor="@color/TextTheme"
                        android:onClick="btnSelect"/>

                    <RadioButton
                        android:id="@+id/rbCurrencyGBP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/GBP"
                        android:textColor="@color/TextTheme"
                        android:onClick="btnSelect"/>
                </RadioGroup>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCloseApp"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.125"
            android:backgroundTint="@color/CardsTheme">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llCloseApp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/neon_outline"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:paddingStart="25dp"
                    android:text="@string/txt_quit_app"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:ems="12"
                    android:singleLine="false"
                    android:textColor="@color/TextTheme">

                </TextView>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCloseApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:paddingHorizontal="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/quit_app"
                    android:background="@drawable/action_rounded_corner_button"
                    android:textColor="@color/TextTheme"
                    android:drawableStart="@drawable/ic_quit"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSettings_4"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.125"
            android:backgroundTint="@color/CardsTheme">
            <LinearLayout
                android:id="@+id/llSettings_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/neon_outline"
                android:orientation="horizontal" >
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/BackgroundTheme">
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>