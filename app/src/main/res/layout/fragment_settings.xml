<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackgroundTheme"
    tools:context="nav.settings.Settings">

    <LinearLayout
        android:id="@+id/llSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSettings_1"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/CardsTheme">
            <LinearLayout
                android:id="@+id/llSettings_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/neon_outline"
                android:orientation="horizontal">
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSettings_2"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/CardsTheme">
            <LinearLayout
                android:id="@+id/llSettings_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/neon_outline"
                android:orientation="horizontal" >
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSettings_3"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/CardsTheme">
            <LinearLayout
                android:id="@+id/llSettings_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/neon_outline"
                android:orientation="horizontal" >
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSettings_4"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/CardsTheme">
            <LinearLayout
                android:id="@+id/llSettings_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/neon_outline"
                android:orientation="horizontal" >
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>