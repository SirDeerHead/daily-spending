<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackgroundTheme"
    tools:context="nav.Stats">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPieChartStats"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:backgroundTint="@color/CardsTheme">

                <LinearLayout
                    android:id="@+id/llPieChartStats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/neon_outline">

                </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCategoryStats"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/CardsTheme">

                <LinearLayout
                    android:id="@+id/llCategoryStats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/neon_outline"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

